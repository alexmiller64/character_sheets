<%= form_for @character, 
  method: :patch,
  data: { controller: "character" } do |form| 
%>
  <div class="flex flex-col items-start relative">
  <div class="flex flex-col">
  </div>
    <div class="flex justify-between items-center">
      <%= form.text_field @title, 
        class: "mb-4 w-fit h-10 text-md bg-transparent pl-0 pb-0
        text-left border-t-0 border-r-0 border-b-1 border-l-0 border-green-200 
        focus:border-green-100 active:border-green-100 focus:ring-0 
        active:ring-0", 
        data: { action: 'change->character#submit' }
      %>
      <p data-action="click->character#expand" class="text-2xl 
      hover:cursor-pointer w-8 text-center">
        +
      </p>
    </div>
    <%= form.text_area @blurb, 
      class: "w-full h-0 p-0 text-left text-sm bg-yellow rounded-lg 
      drop-shadow-md border-none focus:ring-orange active:ring-orange", 
      data: { action: 'change->character#submit' }
    %>
  </div>
<% end %>
