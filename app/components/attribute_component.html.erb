<%= form_for @character, 
  method: :patch,
  data: { controller: "character" } do |form| 
%>
  <div class="flex flex-col items-center relative">
    <%= form.label @attribute, attribute_label, class: "mb-2" %>
    <%= form.text_field attribute_modifier, 
      class: "w-16 h-20 text-center text-2xl bg-yellow rounded-lg 
      drop-shadow-md border-none focus:ring-orange active:ring-orange", 
      data: { action: 'change->character#submit' }
    %>
    <%= form.text_field @attribute, 
      class: "w-12 h-8 rounded-full absolute -bottom-3 text-center text-lg 
      bg-yellow rounded-lg drop-shadow-md border-orange focus:ring-orange 
      active:ring-orange", 
      data: { action: 'change->character#submit' }
    %>
  </div>
<% end %>
